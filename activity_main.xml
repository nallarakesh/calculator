<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#778899"
    tools:context="ex.lenovo.calculator.MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:background="#808080"
        android:text="9" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn5"
        android:background="#808080"
        android:layout_toEndOf="@+id/btn9"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:text="7" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#808080"
        android:layout_alignBaseline="@+id/btn7"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:text="/" />

    <Button
        android:id="@+id/btn6"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_below="@+id/btn9"
        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:background="#808080"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignStart="@+id/btn8"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn5"
        android:text="4" />

    <Button
        android:id="@+id/btnmul"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btndiv"
        android:layout_toEndOf="@+id/btn4"
        android:text="*" />

    <Button
        android:id="@+id/btn3"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn6"
        android:layout_below="@+id/btn6"
        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn3"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:text="1" />

    <Button
        android:id="@+id/btnadd"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmul"
        android:layout_toEndOf="@+id/btn4"
        android:text="+" />

    <Button
        android:id="@+id/btnclr"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn0"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toStartOf="@+id/btn0"
        android:text="clear" />

    <Button
        android:id="@+id/btn0"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_toStartOf="@+id/btnequal"
        android:text="0" />

    <Button
        android:id="@+id/btnequal"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toEndOf="@+id/btn2"
        android:text="=" />

    <Button
        android:id="@+id/btnsub"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnadd"
        android:layout_toEndOf="@+id/btnequal"
        android:text="-" />

    <TextView
        android:id="@+id/tvControl"
        android:background="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn9"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btn9"
        android:layout_marginBottom="35dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_above="@+id/tvControl"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tvControl"
        android:layout_marginBottom="22dp"
        android:background="#FFFFFF"
        android:visibility="visible" />

    <Button
        android:id="@+id/allc"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnclr"
        android:layout_toStartOf="@+id/dot"
        android:text="AC" />

    <Button
        android:id="@+id/dot"
        android:background="#808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:text="." />

</RelativeLayout>
